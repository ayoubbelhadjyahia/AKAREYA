{% extends 'BaseBack.html.twig' %}

{% block title %}Matiere Premaire{% endblock %}
{% block rechercher %}
    <input class="form-control form-control-navbar" type="search" placeholder="rechercher" aria-label="rech">
{% endblock %}
{% block body %}
    <div class="container position-relative aos-init aos-animate" data-aos="fade-up">
        <h1 align="center">Matiere Premaire </h1>
        <br>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title"><strong>Listes des dossiers</strong></h5>

                        <div class="card-tools">
                            <div class="btn-group">
                                <input id="myInput" class="form-control form-control-navbar" type="search" placeholder="Rechercher" aria-label="rech">

                            </div>
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <div class="btn-group">
                            </div>
                            <button type="button" class="btn btn-tool" data-card-widget="remove">
                                <i class="fas fa-times"></i>
                            </button>

                            </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="row">
                            <!-- /.col -->
                            <div class="col-md-12">
        <table id="t" border="2"  class="table table-striped">
            <thead class="bg-primary">
            <tr>
                <th>Id</th>
                <th>Type matiere</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody id="myTable">
            {% for matiere_prem_const in matiere_prem_consts %}
                <tr >
                    <td>{{ matiere_prem_const.id }}</td>
                    <td>{{ matiere_prem_const.typeMatiereConst }}</td>
                    <td><img src={{  asset('uploads/images/products/'  ~ matiere_prem_const.imageName) }} width="40%"></td>
                    <td><button class="btn">
                            <a href="{{ path('app_matiere_prem_const_showAdmin', {'id': matiere_prem_const.id}) }}"><ion-icon name="reorder-four"></ion-icon></a>
                        </button> <button class="btn">
                            <a href="{{ path('app_matiere_prem_const_editAdmin', {'id': matiere_prem_const.id}) }}"><ion-icon name="construct-outline"></ion-icon></a>
                        </button> </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">pas de donnee</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_matiere_prem_const_newAdmin') }}" class="btn-about">Ajouter Matiere </a>

        <br>
                            </div></div></div></div></div></div>

    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
{% endblock %}


