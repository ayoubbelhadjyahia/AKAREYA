{% extends 'baseBack.html.twig' %}

{% block title %}Outil Decoration{% endblock %}
{% block hero %}

    <div class="breadcrumbs d-flex align-items-center" style="background-image: url({{ asset('assets/img/services-header.jpg') }})">
        <div class="container position-relative d-flex flex-column align-items-center">

            <h2>Gestion de construction</h2>
            <ol>
                <li><a href="http://127.0.0.1:8000/dossier/const/home">Home</a></li>
                <li>gestion de decoration</li>
            </ol>

        </div>
    </div>

{% endblock %}

{% block body %}
<div class="container position-relative aos-init aos-animate" data-aos="fade-up">
    <h1 align="center"> Outils Decoration </h1>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title"><strong>Listes des missions</strong></h5>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <div class="btn-group">
                        </div>
                        <button type="button" class="btn btn-tool" data-card-widget="remove">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <div class="row">
                        <!-- /.col -->
                        <div class="col-md-12">

    <table class="table table-striped table-dark">
        <thead>
        <tr class="bg-info">>
            <th>Id</th>
            <th>Type_outil_d</th>
            <th>Date_mise_Service</th>
            <th>Prix_outil</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for outil_deco in outil_decos %}
            <tr>
                <td>{{ outil_deco.id }}</td>
                <td>{{ outil_deco.typeOutilD }}</td>
                <td>{{ outil_deco.DateMiseService ? outil_deco.DateMiseService|date('Y-m-d') : '' }}</td>
                <td>{{ outil_deco.prixOutil }}</td>
                <td>
                    <button class="btn">
                    <a href="{{ path('app_outil_deco_showAdmin', {'id': outil_deco.id}) }}"><ion-icon name="menu-outline"></ion-icon></a>
                    </button>
                    <button class="btn">
                    <a href="{{ path('app_outil_deco_editAdmin', {'id': outil_deco.id}) }}"><i class="bi-tools"></i><ion-icon name="build-outline"></ion-icon></a>
                    </button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_outil_deco_newAdmin') }}">Ajouter Outil</a>
                        </div></div></div></div></div></div>
</div>
{% endblock %}
