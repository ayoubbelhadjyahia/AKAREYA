{% extends 'baseFront.html.twig' %}

{% block title %}Outil Decoration{% endblock %}
{% block hero %}

    <div class="breadcrumbs d-flex align-items-center" style="background-image: url({{ asset('assets/img/images.jpg') }})">
        <div class="container position-relative d-flex flex-column align-items-center">

            <h2>Gestion de construction</h2>
            <ol>
                <li><a href="http://127.0.0.1:8000/dossier/const/home">Home</a></li>
                <li>gestion de decoration</li>
            </ol>

        </div>
    </div>

{% endblock %}

{% block body %}
<div class="container position-relative aos-init aos-animate" data-aos="fade-up">
    <h1 align="center"> Outils Decoration </h1>

    <table class="table table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type_outil_d</th>
                <th>Date_mise_Service</th>
                <th>Prix_outil</th>
                <th>images</th>
                <th>actions</th>

            </tr>
        </thead>
        <tbody>
        {% for outil_deco in outil_decos %}
            <tr>
                <td>{{ outil_deco.id }}</td>
                <td>{{ outil_deco.typeOutilD }}</td>
                <td>{{ outil_deco.DateMiseService ? outil_deco.DateMiseService|date('Y-m-d') : '' }}</td>
                <td>{{ outil_deco.prixOutil }}</td>
                <td><img src={{ asset('uploads/images/products/'~ outil_deco.imageName) }}></td>
                <td>
                    <button class="btn">
                    <a href="{{ path('app_outil_deco_show', {'id': outil_deco.id}) }}"><i class="bi bi-list-ul"></i></a>
                    </button>
                    <button class="btn">
                    <a href="{{ path('app_outil_deco_edit', {'id': outil_deco.id}) }}"><i class="bi-tools"></i></a>
                    </button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>

    <a href="{{ path('app_outil_deco_new') }}">Ajouter Outil</a>
    <br>
    <div class="d-flex justify-content-center mt-5">
    {{ knp_pagination_render(outil_decos, 'pagination.html.twig') }}
</div>
</div>

{% endblock %}
