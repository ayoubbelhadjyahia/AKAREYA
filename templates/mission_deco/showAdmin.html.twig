{% extends 'baseBack.html.twig' %}

{% block title %}MissionDeco{% endblock %}
{% block hero %}

    <div class="breadcrumbs d-flex align-items-center" style="background-image: url({{ asset('assets/img/services-header.jpg') }})">
        <div class="container position-relative d-flex flex-column align-items-center">

            <h2>Gestion de decoration</h2>
            <ol>
                <li><a href="http://127.0.0.1:8000/dossier/const/home">Home</a></li>
                <li>Gestion de decoration</li>
            </ol>

        </div>
    </div>

{% endblock %}

{% block body %}
<div class="container position-relative aos-init aos-animate" data-aos="fade-up">
    <h1 align="center"> MissionDeco</h1>

    <table class="table table-dark">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ mission_deco.id }}</td>
        </tr>
        <tr>
            <th>Intituler_mission_deco</th>
            <td>{{ mission_deco.intitulerMissionDeco }}</td>
        </tr>
        <tr>
            <th>Date_debut_mission</th>
            <td>{{ mission_deco.dateDebutMission ? mission_deco.dateDebutMission|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>Date_fin_mission</th>
            <td>{{ mission_deco.dateFinMission ? mission_deco.dateFinMission|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>Localisation_mission</th>
            <td>{{ mission_deco.localisationMission }}</td>
        </tr>
        </tbody>
    </table>
    <button class="btn">
        <a  class="bi bi-chevron-bar-left" href="{{ path('app_mission_deco_indexAdmin') }}"><ion-icon name="chevron-back-outline"></ion-icon></a>
    </button>
    <hr>
    <button class="btn">
        <a class="bi-tools" href="{{ path('app_mission_deco_editAdmin', {'id': mission_deco.id}) }}"><i class="bi-tools"></i><ion-icon name="build-outline"></ion-icon></a>
    </button>
    <hr>
    {{ include('mission_deco/_deleteAdmin_form.html.twig') }}
</div>
{% endblock %}
