{% extends 'backback.html.twig' %}

{% block title %}Offre index{% endblock %}

{% block body %}
    {% block hero %}

        <div class="breadcrumbs d-flex align-items-center" style="background-image: url({{ asset('assets/img/services-header.jpg') }})">
            <div class="container position-relative d-flex flex-column align-items-center">

                <h2>Gestion des biens </h2>
                <ol>
                    <li><a hre="">Home</a></li>
                    <li>Les offres</li>
                </ol>

            </div>
        </div>

    {% endblock %}
<h1>Offre </h1>


    <input id="myInput" class="form-control form-control-navbar" type="search" placeholder="Rechercher" aria-label="rech">

<table  id="t" class="table table-dark" >
    <thead>
    <tr>
        <th> <i class="bi bi-house-door">Type_bien_offre</i></th>
        <th> <i class="bi bi-coin"> Prix_offre</i></th>
        <th><i class="bi bi-2-square-fill">Superficie_offre </i></th>
        <th><i class="bi bi-cart-plus">Categorie_offre</i></th>
        <th><i class="bi bi-geo-alt">Adresse_offre</i></th>
        <th>les details de loffre</th>
        <th>image</th>
        <th>id_proprietaire</th>
        <th>actions</th>
    </tr>
    </thead>
    <tbody id="myTable">



    {% for offre in offres %}
        <tr>

            <td>{{ offre.typeBienOffre }}</td>
            <td>{{ offre.prixOffre }}</td>
            <td>{{ offre.superficieOffre }}</td>
            <td>{{ offre.categorieOffre }}</td>
            <td>{{ offre.adresseOffre }}</td>
            <td>{{ offre.detailsrdv }}</td>
            <td>  <img src={{  asset('uploads/images/products/'  ~ offre.imageName) }} width="40%"></td>
            <td><h4>{{ offre.idProprietaire }}</h4></td>
            <td>hhhh {{ include('offre/_delete_form.html.twig') }} </td>


        </tr>
    {% else %}
        <tr>
            <td colspan="8">no records found</td>
        </tr>

    {% endfor %}

    </tbody>


</table>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
    {% endblock %}

