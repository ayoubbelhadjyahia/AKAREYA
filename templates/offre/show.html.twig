{% extends 'base.html.twig' %}

{% block title %}Offre{% endblock %}
{% block hero %}
    <section id="hero" class="hero d-flex align-items-center">
        <div class="container">
            <div class="row">
                <div class="col-xl-4">
                    <h2 data-aos="fade-up">voila les details de l'offre</h2>
                    <blockquote data-aos="fade-up" data-aos-delay="100">
                        <p>Vous trouvez le formuaire ci dessous </p>
                    </blockquote>


                </div>
            </div>
        </div>
    </section>
{% endblock %}
{% block body %}
    <h1>Offre</h1>

    <table class="table table-dark">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ offre.id }}</td>
            </tr>
            <tr>
                <th>Type_bien_offre</th>
                <td>{{ offre.typeBienOffre }}</td>
            </tr>
            <tr>
                <th>Prix_offre</th>
                <td>{{ offre.prixOffre }}</td>
            </tr>
            <tr>
                <th>Superficie_offre</th>
                <td>{{ offre.superficieOffre }}</td>
            </tr>
            <tr>
                <th>Categorie_offre</th>
                <td>{{ offre.categorieOffre }}</td>
            </tr>
            <tr>
                <th>Adresse_offre</th>
                <td>{{ offre.adresseOffre }}</td>
            </tr>
            <tr>
                <th>Id_proprietaire</th>
                <td>{{ offre.idProprietaire }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_offre_index') }}">back to list</a>

    <a href="{{ path('app_offre_edit', {'id': offre.id}) }}">edit</a>

    {{ include('offre/_delete_form.html.twig') }}







{% endblock %}
